<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OLX</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OLX.styles.css" asp-append-version="true" />
    <style>
        /* GLOBAL */
        body {
            background-color: #0f0f0f;
            color: #e4e4e4;
            font-family: "Segoe UI", Arial, sans-serif;
        }

        /* LINKS */
        a {
            color: #ff8c00;
            text-decoration: none;
        }

            a:hover {
                color: #ff9f26;
                text-decoration: underline;
            }

        /* NAVBAR */
        .navbar {
            background-color: #181818 !important;
            border-bottom: 1px solid #2a2a2a !important;
        }

        .navbar-brand {
            font-weight: 600;
            color: #ffffff !important;
        }

        .nav-link {
            color: #cfcfcf !important;
        }

            .nav-link:hover {
                color: #ffffff !important;
            }

        /* CONTAINERS */
        .container, .container-fluid {
            color: #e4e4e4;
        }

        /* MAIN CONTENT CARDS */
        .card {
            background-color: #181818;
            border: 1px solid #2c2c2c;
            border-radius: 8px;
        }

            .card:hover {
                border-color: #ff8c00;
            }

        /* BUTTONS */
        .btn-primary {
            background-color: #ff8c00;
            border-color: #ff8c00;
        }

            .btn-primary:hover {
                background-color: #ff9f26;
                border-color: #ff9f26;
            }

        /* FOOTER */
        footer {
            background-color: #181818;
            border-top: 1px solid #2a2a2a;
            color: #b5b5b5;
        }

            footer a {
                color: #ff8c00;
            }

        /* HEADING STYLES */
        h1, h2, h3, h4, h5 {
            color: #ffffff;
        }

        /* OPTIONAL: Slight glow */
        .navbar, footer, .card {
            box-shadow: 0 0 10px rgba(0,0,0,0.4);
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OLX</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Posty">Główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UserPanel">User</a>
                            </li>
                        }
                        @if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Kosz">Kosz</a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - OLX - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
